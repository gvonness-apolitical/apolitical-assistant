{
  "name": "apolitical-assistant",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "mcp-servers/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint 'packages/**/*.ts' 'mcp-servers/**/*.ts' 'scripts/**/*.ts'",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "setup": "tsx scripts/setup/setup-keychain.ts",
    "google-auth": "tsx scripts/setup/google-oauth.ts",
    "check-credentials": "tsx scripts/setup/check-credentials.ts",
    "morning-briefing": "tsx scripts/workflows/morning-briefing.ts",
    "email-cleanup": "tsx scripts/workflows/email-cleanup.ts",
    "eod-summary": "tsx scripts/workflows/eod-summary.ts",
    "todos": "tsx scripts/workflows/todo-display.ts",
    "todos:all": "tsx scripts/workflows/todo-display.ts --all",
    "todos:json": "tsx scripts/workflows/todo-display.ts --json",
    "todos:collect": "tsx scripts/workflows/todo-collect.ts",
    "todos:collect:verbose": "tsx scripts/workflows/todo-collect.ts --verbose",
    "todos:complete": "tsx scripts/workflows/todo-complete.ts",
    "todos:snooze": "tsx scripts/workflows/todo-snooze.ts",
    "todos:archive": "tsx scripts/workflows/todo-archive.ts",
    "todos:interactive": "tsx scripts/workflows/todo-interactive.ts",
    "todos:weekly": "tsx scripts/workflows/todo-weekly.ts",
    "todos:notify": "tsx scripts/workflows/todo-notify.ts",
    "todos:reset": "tsx scripts/workflows/todo-reset.ts",
    "meeting:prep": "tsx scripts/workflows/meetings/cli.ts prep",
    "meeting:121": "tsx scripts/workflows/meetings/cli.ts one-on-one",
    "meeting:agenda": "tsx scripts/workflows/meetings/cli.ts agenda",
    "summary:daily": "tsx scripts/workflows/summaries/cli.ts daily",
    "summary:weekly": "tsx scripts/workflows/summaries/cli.ts weekly",
    "summary:monthly": "tsx scripts/workflows/summaries/cli.ts monthly",
    "summary:quarterly": "tsx scripts/workflows/summaries/cli.ts quarterly",
    "summary:yearly": "tsx scripts/workflows/summaries/cli.ts yearly",
    "summary:search": "tsx scripts/workflows/summaries/cli.ts search",
    "summary:diff": "tsx scripts/workflows/summaries/cli.ts diff",
    "email:triage": "tsx scripts/workflows/email/cli.ts triage",
    "email:rules": "tsx scripts/workflows/email/cli.ts rules",
    "email:stats": "tsx scripts/workflows/email/cli.ts stats",
    "briefing:morning": "tsx scripts/workflows/briefings/cli.ts morning",
    "briefing:eod": "tsx scripts/workflows/briefings/cli.ts eod",
    "briefing:weekly": "tsx scripts/workflows/briefings/cli.ts weekly",
    "task:help": "tsx scripts/workflows/task-helper/cli.ts",
    "task:help:list": "tsx scripts/workflows/task-helper/cli.ts --list"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.39.2",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.1.0"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
