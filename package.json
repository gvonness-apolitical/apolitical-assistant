{
  "name": "apolitical-assistant",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "mcp-servers/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run build -w mcp-servers/shared && npm run build -w mcp-servers/google -w mcp-servers/slack -w mcp-servers/humaans -w mcp-servers/incident-io",
    "test": "npm test --workspaces && vitest run --config vitest.config.scripts.ts",
    "typecheck": "npm run typecheck --workspaces",
    "credentials": "npx tsx scripts/credentials/index.ts",
    "setup-hooks": "cp scripts/hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit && echo 'Pre-commit hook installed'",
    "git-crypt:check": "./scripts/git-crypt-check.sh",
    "git-crypt:fix": "./scripts/git-crypt-check.sh --fix"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0"
  }
}
