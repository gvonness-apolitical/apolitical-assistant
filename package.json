{
  "name": "apolitical-assistant",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "mcp-servers/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint 'packages/**/*.ts' 'mcp-servers/**/*.ts' 'scripts/**/*.ts'",
    "typecheck": "turbo run typecheck",
    "setup": "tsx scripts/setup/setup-keychain.ts",
    "google-auth": "tsx scripts/setup/google-oauth.ts",
    "check-credentials": "tsx scripts/setup/check-credentials.ts",
    "morning-briefing": "tsx scripts/workflows/morning-briefing.ts",
    "email-cleanup": "tsx scripts/workflows/email-cleanup.ts",
    "eod-summary": "tsx scripts/workflows/eod-summary.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.2",
    "tsx": "^4.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.1"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
