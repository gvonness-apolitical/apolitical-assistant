{
  "mcpServers": {
    "google": {
      "command": "node",
      "args": ["./mcp-servers/google/dist/index.js"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN}"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "linear": {
      "type": "sse",
      "url": "https://mcp.linear.app/sse",
      "headers": {
        "Authorization": "Bearer ${LINEAR_API_KEY}"
      }
    },
    "slack": {
      "command": "node",
      "args": ["./mcp-servers/slack/dist/index.js"],
      "env": {
        "SLACK_TOKEN": "${SLACK_TOKEN}"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.notion.com/mcp"]
    },
    "humaans": {
      "command": "node",
      "args": ["./mcp-servers/humaans/dist/index.js"],
      "env": {
        "HUMAANS_API_TOKEN": "${HUMAANS_API_TOKEN}"
      }
    },
    "incident-io": {
      "command": "node",
      "args": ["./mcp-servers/incident-io/dist/index.js"],
      "env": {
        "INCIDENTIO_API_KEY": "${INCIDENTIO_API_KEY}"
      }
    }
  }
}
