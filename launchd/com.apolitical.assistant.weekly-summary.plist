<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.apolitical.assistant.weekly-summary</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/npm</string>
        <string>run</string>
        <string>briefing:weekly</string>
        <string>--</string>
        <string>--previous</string>
    </array>

    <key>WorkingDirectory</key>
    <string>APOLITICAL_ASSISTANT_PATH</string>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Weekday</key>
        <integer>1</integer>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>APOLITICAL_ASSISTANT_PATH/logs/launchd/weekly-summary.log</string>

    <key>StandardErrorPath</key>
    <string>APOLITICAL_ASSISTANT_PATH/logs/launchd/weekly-summary.error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
